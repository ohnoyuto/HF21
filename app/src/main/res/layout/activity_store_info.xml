<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">

        <!-- ヘッダー -->
        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店舗名"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- 利用可 -->
        <TextView
            android:id="@+id/store_available_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="利用可: 1台"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- 返却可 -->
        <TextView
            android:id="@+id/store_returnable_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返却可: 9台"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- 営業時間 -->
        <TextView
            android:id="@+id/store_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="営業時間: 07:00 - 23:00"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- 住所 -->
        <TextView
            android:id="@+id/store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="住所: 東京都新宿区..."
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- 電話番号 -->
        <TextView
            android:id="@+id/store_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="電話番号: 03-1234-5678"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="@dimen/margin_large" />

        <!-- 借りるボタン -->
        <Button
            android:id="@+id/qr_scan_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="借りる"
            android:textSize="@dimen/text_size_medium"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/margin_small"
            android:padding="@dimen/button_padding" />

        <!-- 返却ボタン -->
        <Button
            android:id="@+id/return_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返却"
            android:textSize="@dimen/text_size_medium"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_small"
            android:padding="@dimen/button_padding" />

        <!-- 戻るボタン -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="戻る"
            android:textSize="@dimen/text_size_medium"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/margin_large"
            android:padding="@dimen/button_padding" />

    </LinearLayout>
</ScrollView>
