<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium"
        android:gravity="center">

        <!-- ヘッダー -->
        <TextView
            android:id="@+id/register_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新規登録"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- 名前 -->
        <EditText
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="名前"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- メール -->
        <EditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="メールアドレス"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- パスワード -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_medium">

            <EditText
                android:id="@+id/register_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="パスワード"
                android:inputType="textPassword"
                android:layout_weight="1" />

            <Button
                android:id="@+id/password_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表示" />
        </LinearLayout>

        <!-- パスワード確認 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_medium">

            <EditText
                android:id="@+id/register_confirm_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="パスワード確認"
                android:inputType="textPassword"
                android:layout_weight="1" />

            <Button
                android:id="@+id/confirm_password_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表示" />
        </LinearLayout>

        <!-- 生年月日 -->
        <EditText
            android:id="@+id/register_birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="生年月日 (YYYY-MM-DD)"
            android:inputType="number"
            android:maxLength="10"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- 住所 -->
        <EditText
            android:id="@+id/register_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="住所"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- 電話番号 -->
        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="電話番号"
            android:inputType="phone"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- 免許証番号 -->
        <EditText
            android:id="@+id/register_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="免許証番号"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- 登録ボタン -->
        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登録"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/margin_medium"
            android:padding="@dimen/button_padding" />

        <!-- ログインページに戻るボタン -->
        <Button
            android:id="@+id/back_to_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ログインページに戻る"
            android:backgroundTint="@color/primaryDarkColor"
            android:textColor="@android:color/white"
            android:padding="@dimen/button_padding" />
    </LinearLayout>
</ScrollView>
